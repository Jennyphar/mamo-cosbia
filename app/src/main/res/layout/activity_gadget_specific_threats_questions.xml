<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".GadgetSpecificThreatsQuestions">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">


        <ImageView
            android:id="@+id/gadget_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_gen_inte_threats"/>
        <TextView
            android:id="@+id/tv_gadget_specific_threat_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#363A43"
            android:textSize="22sp"
            android:text="Gadget Specific Questions"/>
        <LinearLayout
            android:id="@+id/gadget_progress_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/gadget_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="4"
                android:minHeight="50dp"
                android:indeterminate="false"
                />
            <TextView
                android:id="@+id/tv_gadget_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="#7A8089"
                android:textSize="14sp"
                android:text="0/4"/>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_gadget_option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="left"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="14sp"
            android:text="Apple"/>

        <TextView
            android:id="@+id/tv_gadget_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="left"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="14sp"
            android:text="Nokia"/>

        <TextView
            android:id="@+id/tv_gadget_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="left"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="14sp"
            android:text="Samgs"/>

        <TextView
            android:id="@+id/tv_gadget_option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_border_bg"
            android:gravity="left"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="14sp"
            android:text="Moto"/>
        <Button
            android:id="@+id/btn_gadget_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </LinearLayout>



</ScrollView>